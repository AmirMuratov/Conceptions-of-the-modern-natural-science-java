<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.*?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<SplitPane dividerPositions="0.25" prefHeight="466.0" prefWidth="775.0" xmlns="http://javafx.com/javafx/8"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.FirstDiagramController">
    <items>
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
            <children>
                <FlowPane layoutX="-13.0" layoutY="30.0" prefHeight="433.0" prefWidth="173.0"
                          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                          AnchorPane.topAnchor="0.0">
                    <children>
                        <Label text="phi(x) = r * x * (1 - x)">
                            <FlowPane.margin>
                                <Insets left="5.0" top="10.0"/>
                            </FlowPane.margin>
                        </Label>
                        <Label text="Enter x0:">
                            <FlowPane.margin>
                                <Insets left="5.0" top="5.0"/>
                            </FlowPane.margin>
                        </Label>
                        <TextField text="1" fx:id="x01">
                            <FlowPane.margin>
                                <Insets left="5.0" top="5.0"/>
                            </FlowPane.margin>
                        </TextField>
                        <Label text="Enter r:">
                            <FlowPane.margin>
                                <Insets left="5.0" top="5.0"/>
                            </FlowPane.margin>
                        </Label>
                        <TextField fx:id="r1" text="1">
                            <FlowPane.margin>
                                <Insets left="5.0" top="5.0"/>
                            </FlowPane.margin>
                        </TextField>
                        <Label text="Enter number of iterations: ">
                            <FlowPane.margin>
                                <Insets left="5.0" top="5.0"/>
                            </FlowPane.margin>
                        </Label>
                        <TextField fx:id="iter1" text="40">
                            <FlowPane.margin>
                                <Insets left="5.0" top="5.0"/>
                            </FlowPane.margin>
                        </TextField>
                        <Button fx:id="plotButton1" mnemonicParsing="false" onAction="#plotFirstDiagram" text="Plot"
                                textAlignment="CENTER">
                            <font>
                                <Font size="18.0"/>
                            </font>
                            <opaqueInsets>
                                <Insets/>
                            </opaqueInsets>
                            <FlowPane.margin>
                                <Insets left="5.0" top="10.0"/>
                            </FlowPane.margin>
                        </Button>
                    </children>
                </FlowPane>
            </children>
        </AnchorPane>
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
            <children>
                <LineChart fx:id="lineChart" layoutX="-8.0" legendVisible="false" prefHeight="433.0" prefWidth="451.0"
                           title="Convergence chart" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                           AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <xAxis>
                        <NumberAxis/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis/>
                    </yAxis>
                </LineChart>
            </children>
        </AnchorPane>
    </items>
</SplitPane>
